@ARTICLE{hto-mpe-2015-cpc_bufferbloat_wired,
  author = {Hoang-Linh To and Thuyen Minh Thi and Won-Joo Hwang},
  title = {Cascade Probability Control to Mitigate Bufferbloat under Multiple
	Real-World TCP Stacks},
  journal = {Mathematical Problems in Engineering},
  year = {2015},
  number = {Article ID 628583},
  note = {Online.},
  abstract = {Persistently full buffer problem, commonly known as bufferbloat, causes
	unnecessary additional latency and throughput degradation whenever
	congestion happens in Internet. Several proposed queue management
	schemes, with the debloat mission, are almost based on the modification
	of one-loop feedback control where the instability and bad transient
	behavior are still big challenges. In this paper, we present a cascade
	probability control scheme using margin optimal method to address
	such challenges under different kinds of real-world TCP stacks. Simulation
	results guarantee the measured round trip time tracking to a low
	value of delay (e.g., 180 ms under TCP Reno, and 130 ms under TCP
	Cubic) and 50% delay reduction in comparison to current deployed
	queue management schemes in network devices.},
  owner = {linhth},
  url = {http://www.hindawi.com/journals/mpe/aa/628583/}
}

@ARTICLE{hto-kmms-2013-feedbackcontrol,
  author = {Hoang-Linh To and Gwi-Ok Yoon and Jae-Hyun Nam and Ganbold Solongo
	and Won-Joo Hwang},
  title = {Feedback Burst Loss Ratio Control for Link Performance Improvement
	in Optical Burst Switching Networks},
  journal = {Journal of Korea Multimedia Society},
  year = {2013},
  volume = {16},
  pages = {1067-1076},
  number = {9},
  month = {September},
  abstract = {Known as an important criterion that evaluates performance of future
	high-speed backbone networks, burst data loss ratio is well-studied
	in Optical Burst Switching networks. Current literatures mostly focus
	on reduce burst loss ratio without considering the system stability
	and link utilization after reducing. In this paper, we propose a
	novel framework which comes from feedback theoretic to dynamically
	control burst loss ratio in OBS. The proposed scheme tries to track
	the pre-set values of burst loss ratio and increases the stability
	and link utilization degree. The simulation results show that measured
	burst loss ratio always tracks setup reference with small errors,
	wavelength channel utilization is increased up to 2% and the system
	stability is also improved.},
  doi = {10.9717/kmms.2013.16.9.1067},
  keywords = {Optical Burst Switching . Feedback Control . QoS . Burst Loss Ratio},
  owner = {linhth},
  url = {http://koreascience.or.kr/article/ArticleFullRecord.jsp?cn=MTMDCW_2013_v16n9_1067}
}

