@MASTERSTHESIS{hto-msthesis-2013,
  author = {Hoang-Linh To},
  title = {Burst Traffic Management Schemes for Quality of Service in Optical
	Burst Switching Network},
  school = {Inje University},
  year = {2013},
  month = {August},
  abstract = {All-optical network has been received many attention from researchers
	due to the obvious fact of light speed. Several solutions to an all-optical
	backbone network solution have been proposed, however, not completely
	yet due to lack of all-optical technologies such as optical buffer,
	optical monitor, optical packet separation, etc. To handle important
	requirements for near future internet while still consider the lack
	of current technologies, Optical Burst Switching has been proposed
	as one of the most suitable candidates. In such network, one of the
	important issues is how to manage burst flows efficiently includes
	burst contention, when multiple data bursts with the same destination
	are simultaneously destined for an intermediate output port. The
	primary research objectives of this thesis are to build comprehensive
	system models and propose new schemes to tackle burst contention
	issue. First, we develop a queuing model considering impatience features
	of burst flow to reduce burst loss ratio in single-wavelength optical
	burst switching networks. Second, we extend the model and propose
	a novel feedback-based scheme to dynamically control burst loss ratio
	in multi-wavelength optical burst switching networks. We also develop
	a simulator in OMNeT++ simulation framework for National Science
	Foundation Network topology based on the optical burst switching
	technique. Simulation results demonstrate our schemes work better
	in comparison to other approaches in terms of reducing and stabilizing
	burst loss ratio and other performance criteria also.},
  keywords = {optical burst switching , optical buffer , burst contention , feedback
	control , burst loss ratio},
  owner = {linhth},
  url = {http://www.dcollection.net/handler/inje/000000008236}
}

